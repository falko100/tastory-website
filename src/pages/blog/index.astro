---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageHero from '../../components/PageHero.astro';
import { getCollection } from 'astro:content';
import { formatDate } from '../../utils/format';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf(),
);

const base = import.meta.env.BASE_URL;
---

<BaseLayout
  title="Blog â€” Tastory"
  description="Lees de laatste artikelen en updates van Tastory. Blijf op de hoogte van onze reis."
>
  <PageHero
    tag="Blog"
    title="Laatste <em>artikelen</em>"
    description="Blijf op de hoogte van de laatste ontwikkelingen, inzichten en verhalen van Tastory."
  />

  <section class="blog-section">
    <div class="blog-grid">
      {
        posts.map((post) => (
          <a href={`${base}/blog/${post.slug}`} class="blog-card reveal">
            <div class="blog-card-date">{formatDate(post.data.date)}</div>
            <h2 class="blog-card-title">{post.data.title}</h2>
            <p class="blog-card-desc">{post.data.description}</p>
            {post.data.tags && (
              <div class="blog-card-tags">
                {post.data.tags.map((tag: string) => (
                  <span class="blog-tag">{tag}</span>
                ))}
              </div>
            )}
            <span class="blog-card-link">Lees meer &rarr;</span>
          </a>
        ))
      }
    </div>
  </section>
</BaseLayout>

<style>
  .blog-section {
    max-width: 1400px;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .blog-card {
    background: var(--white);
    border: 1px solid rgba(136, 101, 69, 0.06);
    border-radius: var(--radius-lg);
    padding: 2.5rem;
    text-decoration: none;
    display: flex;
    flex-direction: column;
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .blog-card:hover {
    border-color: rgba(255, 142, 62, 0.18);
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .blog-card-date {
    font-size: var(--text-base);
    color: var(--text-muted);
    margin-bottom: 1rem;
  }

  .blog-card-title {
    font-family: var(--serif);
    font-size: 1.4rem;
    color: var(--text);
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .blog-card-desc {
    font-size: var(--text-base);
    line-height: 1.7;
    color: var(--text-muted);
    margin-bottom: 1.5rem;
    flex: 1;
  }

  .blog-card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .blog-tag {
    font-size: var(--text-sm);
    padding: 0.3rem 0.8rem;
    background: rgba(255, 142, 62, 0.08);
    color: var(--orange);
    border-radius: 100px;
    letter-spacing: 0.02em;
  }

  .blog-card-link {
    font-size: var(--text-base);
    color: var(--orange);
    font-weight: 500;
    transition: transform 0.3s;
  }

  .blog-card:hover .blog-card-link {
    transform: translateX(4px);
  }

  @media (max-width: 1024px) {
    .blog-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media (max-width: 640px) {
    .blog-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
