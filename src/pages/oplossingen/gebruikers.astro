<style>
  .steps-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-top: 3rem;
  }

  .step-card {
    background: var(--white);
    border: 1px solid rgba(136, 101, 69, 0.06);
    border-radius: 20px;
    padding: 2.5rem;
    position: relative;
  }

  .step-number {
    font-family: var(--serif);
    font-size: 3rem;
    color: var(--orange);
    opacity: 0.3;
    margin-bottom: 1rem;
  }

  .step-card h3 {
    font-family: var(--serif);
    font-size: 1.5rem;
    color: var(--text);
    font-style: italic;
    margin-bottom: 1rem;
  }

  .step-card p {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--text-muted);
  }

  /* Features */
  .features-section {
    background: var(--white);
    padding: 7rem 3rem;
    max-width: 100%;
  }

  .features-section > .reveal {
    max-width: 1400px;
    margin-left: auto;
    margin-right: auto;
  }

  .user-features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin-top: 3rem;
    max-width: 1400px;
    margin-left: auto;
    margin-right: auto;
  }

  .user-feature {
    background: var(--beige);
    border: 1px solid rgba(136, 101, 69, 0.06);
    border-radius: 16px;
    padding: 2rem;
    transition: all 0.4s;
  }

  .user-feature:hover {
    transform: translateY(-3px);
    box-shadow: 0 16px 50px rgba(136, 101, 69, 0.08);
  }

  .user-feature-icon {
    font-size: 1.8rem;
    margin-bottom: 1rem;
  }

  .user-feature h3 {
    font-family: var(--serif);
    font-size: 1.2rem;
    color: var(--text);
    margin-bottom: 0.6rem;
  }

  .user-feature p {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--text-muted);
  }

  /* CTA */
  .cta-users {
    text-align: center;
    padding: 7rem 3rem;
    max-width: 1400px;
  }

  .cta-users-inner {
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-users p {
    font-size: 1.05rem;
    line-height: 1.7;
    color: var(--text-muted);
    margin-bottom: 2rem;
  }

  @media (max-width: 1024px) {
    .steps-grid { grid-template-columns: 1fr; }
    .user-features-grid { grid-template-columns: 1fr 1fr; }
  }

  @media (max-width: 640px) {
    .user-features-grid { grid-template-columns: 1fr; }
  }
</style>
