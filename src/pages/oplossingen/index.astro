<style>
  .solutions-overview {
    max-width: 1400px;
  }

  .solutions-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }

  .solution-card {
    background: var(--white);
    border: 1px solid rgba(136, 101, 69, 0.06);
    border-radius: 20px;
    padding: 3rem;
    text-decoration: none;
    display: block;
    transition: all 0.4s;
  }

  .solution-card:hover {
    border-color: rgba(255, 142, 62, 0.18);
    transform: translateY(-4px);
    box-shadow: 0 20px 60px rgba(136, 101, 69, 0.08);
  }

  .solution-icon {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
  }

  .solution-card h2 {
    font-family: var(--serif);
    font-size: 1.6rem;
    color: var(--text);
    margin-bottom: 1rem;
  }

  .solution-card > p {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--text-muted);
    margin-bottom: 2rem;
  }

  .solution-steps {
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
    margin-bottom: 2rem;
  }

  .solution-step {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
    padding-left: 1rem;
    border-left: 2px solid var(--orange);
  }

  .step-label {
    font-family: var(--serif);
    font-size: 1.1rem;
    color: var(--orange);
    font-style: italic;
  }

  .step-desc {
    font-size: 1rem;
    color: var(--text-muted);
    line-height: 1.5;
  }

  .solution-link {
    font-size: 1rem;
    color: var(--orange);
    font-weight: 500;
    transition: transform 0.3s;
  }

  .solution-card:hover .solution-link {
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .solutions-grid { grid-template-columns: 1fr; }
  }
</style>
