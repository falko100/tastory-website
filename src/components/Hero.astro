<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: 8rem 3rem 4rem;
  }

  .hero-video-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
    overflow: hidden;
  }

  .hero-video-bg iframe {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 180vw;
    height: 180vh;
    min-width: 180vw;
    min-height: 180vh;
    transform: translate(-50%, -50%);
    pointer-events: none;
  }

  .hero-video-overlay {
    position: absolute;
    inset: 0;
    z-index: 1;
    background:
      linear-gradient(180deg,
        rgba(58, 46, 34, 0.55) 0%,
        rgba(58, 46, 34, 0.4) 40%,
        rgba(58, 46, 34, 0.6) 80%,
        rgba(58, 46, 34, 0.85) 100%
      );
  }

  .hero-video-overlay::after {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(136, 101, 69, 0.1);
    mix-blend-mode: multiply;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 1400px;
    margin: 0 auto;
    width: 100%;
    display: grid;
    grid-template-columns: 1.15fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .hero-text { animation: fadeUp 1s 0.2s ease both; }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    background: rgba(255, 142, 62, 0.15);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 142, 62, 0.3);
    border-radius: 100px;
    padding: 0.4rem 1.2rem 0.4rem 0.6rem;
    margin-bottom: 1.8rem;
    font-size: 0.72rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--orange-light);
    font-weight: 500;
  }

  .hero-badge-dot {
    width: 8px; height: 8px;
    background: var(--orange);
    border-radius: 50%;
    animation: blink 2s ease-in-out infinite;
  }

  .hero h1 {
    font-family: var(--serif);
    font-size: clamp(2.8rem, 5vw, 5rem);
    line-height: 1.08;
    color: var(--white);
    font-weight: 400;
    margin-bottom: 1.6rem;
    text-shadow: 0 2px 30px rgba(58, 46, 34, 0.3);
  }

  .hero h1 em {
    color: var(--orange);
    font-style: italic;
  }

  .hero-desc {
    font-size: 1.05rem;
    line-height: 1.8;
    color: rgba(255, 252, 248, 0.8);
    max-width: 500px;
    margin-bottom: 2.5rem;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    align-items: center;
    flex-wrap: wrap;
  }

  /* Phone mockup */
  .hero-visual {
    display: flex;
    justify-content: center;
    animation: fadeUp 1s 0.5s ease both;
  }

  .phone-wrapper { position: relative; }

  .phone-mockup {
    width: 270px;
    height: 560px;
    background: #1a1714;
    border-radius: 40px;
    border: 3px solid rgba(255, 252, 248, 0.15);
    position: relative;
    overflow: hidden;
    box-shadow:
      0 50px 100px rgba(58, 46, 34, 0.5),
      0 0 0 1px rgba(255,255,255,0.05),
      0 0 60px rgba(0, 0, 0, 0.2);
  }

  .phone-notch {
    position: absolute;
    top: 0; left: 50%;
    transform: translateX(-50%);
    width: 100px; height: 26px;
    background: #0e0c0a;
    border-radius: 0 0 18px 18px;
    z-index: 5;
  }

  .phone-screen {
    position: absolute;
    inset: 5px;
    border-radius: 36px;
    overflow: hidden;
    background: #161310;
  }

  .phone-feed {
    width: 100%; height: 100%;
    position: relative;
  }

  .phone-video-area {
    width: 100%; height: 100%;
    position: relative;
    background: linear-gradient(160deg, #2a1f12 0%, #1a140a 40%, #18120e 100%);
  }

  .phone-plate-circle {
    position: absolute;
    top: 36%; left: 50%;
    transform: translate(-50%, -50%);
    width: 110px; height: 110px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(255,142,62,0.1) 0%, rgba(245,235,221,0.04) 50%, transparent 70%);
    border: 1px solid rgba(245,235,221,0.05);
  }

  .phone-play-btn {
    position: absolute;
    top: 36%; left: 50%;
    transform: translate(-50%, -50%);
    width: 46px; height: 46px;
    border-radius: 50%;
    background: rgba(255, 142, 62, 0.3);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 142, 62, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
    animation: pulse 2.5s ease-in-out infinite;
  }

  .phone-play-btn::after {
    content: '';
    width: 0; height: 0;
    border-style: solid;
    border-width: 7px 0 7px 12px;
    border-color: transparent transparent transparent var(--orange);
    margin-left: 2px;
  }

  .phone-sidebar {
    position: absolute;
    right: 10px;
    bottom: 105px;
    display: flex;
    flex-direction: column;
    gap: 0.9rem;
    align-items: center;
  }

  .phone-sidebar-icon {
    width: 30px; height: 30px;
    border-radius: 50%;
    background: rgba(255,255,255,0.1);
    display: flex; align-items: center; justify-content: center;
    font-size: 0.65rem;
    color: rgba(255,252,248,0.9);
  }

  .phone-sidebar-label {
    font-size: 0.42rem;
    color: rgba(255,252,248,0.5);
    text-align: center;
    margin-top: -0.4rem;
  }

  .phone-bottom-overlay {
    position: absolute;
    bottom: 0; left: 0; right: 0;
    padding: 1.1rem;
    background: linear-gradient(transparent, rgba(14,12,10,0.95));
  }

  .phone-user-row {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.4rem;
  }

  .phone-avatar {
    width: 24px; height: 24px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--orange), var(--brown));
    display: flex; align-items: center; justify-content: center;
    font-size: 0.5rem; font-weight: 700; color: white;
  }

  .phone-username {
    font-size: 0.6rem;
    font-weight: 600;
    color: rgba(255,252,248,0.95);
  }

  .phone-verified {
    font-size: 0.5rem;
    color: var(--orange);
  }

  .phone-caption {
    font-family: var(--serif);
    font-size: 0.78rem;
    color: rgba(255,252,248,0.95);
    line-height: 1.3;
    margin-bottom: 0.3rem;
  }

  .phone-meta {
    display: flex;
    gap: 0.7rem;
    font-size: 0.5rem;
    color: rgba(255,252,248,0.45);
  }

  /* Float cards */
  .float-card {
    position: absolute;
    background: rgba(255, 252, 248, 0.9);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(136, 101, 69, 0.1);
    border-radius: 14px;
    padding: 0.65rem 0.9rem;
    animation: float 6s ease-in-out infinite;
    white-space: nowrap;
    box-shadow: 0 8px 30px rgba(58, 46, 34, 0.12);
  }

  .float-card-1 { top: 10%; right: -38px; animation-delay: 0s; }
  .float-card-2 { bottom: 16%; left: -32px; animation-delay: 2s; }
  .float-card-3 { top: 52%; right: -46px; animation-delay: 4s; }

  .fc-label {
    font-size: 0.48rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--text-muted);
    margin-bottom: 0.1rem;
  }

  .fc-value {
    font-family: var(--serif);
    font-size: 0.95rem;
    color: var(--brown);
  }

  .fc-row {
    display: flex;
    align-items: center;
    gap: 0.3rem;
  }

  .fc-stars { color: var(--orange); font-size: 0.65rem; }

  @media (max-width: 1024px) {
    .hero-content { grid-template-columns: 1fr; text-align: center; }
    .hero-desc { margin-left: auto; margin-right: auto; }
    .hero-actions { justify-content: center; }
    .hero-badge { margin-left: auto; margin-right: auto; }
    .hero-visual { margin-top: 2rem; }
  }

  @media (max-width: 640px) {
    .hero { padding: 7rem 1.5rem 3rem; }
    .float-card { display: none; }
  }
</style>
