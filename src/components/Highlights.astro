---
interface Props {
  highlights: { date: string; title: string; description: string }[];
}

const { highlights } = Astro.props;
---

<section id="hoogtepunten">
  <div class="reveal">
    <div class="section-tag">Hoogtepunten</div>
    <div class="section-title">Het laatste <em>nieuws</em></div>
  </div>
  <div class="highlights-grid">
    {
      highlights.map((item) => (
        <div class="highlight-card reveal">
          <div class="highlight-date">{item.date}</div>
          <h3>{item.title}</h3>
          <p>{item.description}</p>
          <div class="highlight-link">Lees meer</div>
        </div>
      ))
    }
  </div>
</section>

<style>
  .highlights-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin-top: 3.5rem;
  }

  .highlight-card {
    background: var(--white);
    border: 1px solid rgba(136, 101, 69, 0.06);
    border-radius: 16px;
    padding: 2rem 1.8rem;
    transition: all 0.4s;
    cursor: pointer;
    text-decoration: none;
    display: block;
  }

  .highlight-card:hover {
    border-color: rgba(255, 142, 62, 0.18);
    transform: translateY(-3px);
    box-shadow: 0 16px 50px rgba(136, 101, 69, 0.08);
  }

  .highlight-date {
    font-size: 1rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--orange);
    margin-bottom: 0.8rem;
    font-weight: 500;
  }

  .highlight-card h3 {
    font-family: var(--serif);
    font-size: 1.25rem;
    color: var(--text);
    font-weight: 400;
    line-height: 1.35;
    margin-bottom: 0.8rem;
  }

  .highlight-card p {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--text-muted);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .highlight-link {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 1rem;
    color: var(--orange);
    margin-top: 1rem;
    font-weight: 500;
  }

  .highlight-link::after {
    content: '\2192';
    transition: transform 0.3s;
  }

  .highlight-card:hover .highlight-link::after {
    transform: translateX(4px);
  }

  @media (max-width: 1024px) {
    .highlights-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media (max-width: 640px) {
    .highlights-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
