---
import Icon from './Icon.astro';

interface Props {
  features: { icon: string; title: string; description: string }[];
}

const { features } = Astro.props;
---

<section>
  <div class="reveal">
    <div class="section-tag">Mogelijkheden</div>
    <div class="section-title">Wordt geïnspireerd en <em>inspireer</em> anderen!</div>
    <div class="section-desc">
      Tastory creëert waarde voor zowel restaurantbezoekers als restaurants. Bezoekers worden
      geholpen in het maken van een juiste keuze en restaurants worden ondersteund in het versterken
      van hun promotie, bereik en conversie.
    </div>
  </div>
  <div class="features-grid">
    {
      features.map((feature) => (
        <div class="feature-card reveal">
          <div class="feature-bg-icon">
            <Icon name={feature.icon} size={120} />
          </div>
          <h3>{feature.title}</h3>
          <p>{feature.description}</p>
        </div>
      ))
    }
  </div>
</section>

<style>
  .features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin-top: 4rem;
  }

  .feature-card {
    background: var(--white);
    border: 1px solid rgba(136, 101, 69, 0.06);
    border-radius: 16px;
    padding: 2.5rem 2rem;
    position: relative;
    overflow: hidden;
    transition: all 0.4s;
    cursor: default;
  }

  .feature-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, transparent, var(--orange), transparent);
    opacity: 0;
    transition: opacity 0.4s;
  }

  .feature-card:hover {
    border-color: rgba(255, 142, 62, 0.15);
    transform: translateY(-4px);
    box-shadow: 0 20px 60px rgba(136, 101, 69, 0.08);
  }

  .feature-card:hover::before {
    opacity: 1;
  }

  .feature-bg-icon {
    position: absolute;
    bottom: 10px;
    right: 10px;
    color: var(--orange);
    opacity: 0.06;
    pointer-events: none;
    transition: opacity 0.4s;
  }

  .feature-card:hover .feature-bg-icon {
    opacity: 0.1;
  }

  .feature-card h3 {
    font-family: var(--serif);
    font-size: 1.2rem;
    color: var(--text);
    font-weight: 400;
    margin-bottom: 0.8rem;
  }

  .feature-card p {
    font-size: 1rem;
    line-height: 1.75;
    color: var(--text-muted);
  }

  @media (max-width: 1024px) {
    .features-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media (max-width: 640px) {
    .features-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
