---
interface Props {
  stats: { number: string; label: string }[];
}

const { stats } = Astro.props;
---

<div class="stats-bar">
  <div class="stats-wrapper">
    <div class="stats-intro">
      <span class="stats-intro-text">Wist je dat</span>
      <svg class="stats-intro-arrow" viewBox="0 0 80 20" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <line x1="0" y1="10" x2="68" y2="10" stroke="currentColor" stroke-width="1.5"/>
        <polyline points="58,2 70,10 58,18" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linejoin="round" stroke-linecap="round"/>
      </svg>
    </div>
    <div class="stats-inner">
      {
        stats.map((stat) => (
          <div class="stat">
            <div class="stat-number">{stat.number}</div>
            <div class="stat-label">{stat.label}</div>
          </div>
        ))
      }
    </div>
  </div>
</div>

<div class="solution-bar">
  <div class="stats-wrapper">
    <div class="stats-intro">
      <span class="stats-intro-text">Tastory lost dit op door</span>
      <svg class="stats-intro-arrow" viewBox="0 0 80 20" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <line x1="0" y1="10" x2="68" y2="10" stroke="currentColor" stroke-width="1.5"/>
        <polyline points="58,2 70,10 58,18" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linejoin="round" stroke-linecap="round"/>
      </svg>
    </div>
    <div class="stats-inner solution-inner">
      <div class="solution-item">
        <svg class="solution-icon" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
          <circle cx="10" cy="10" r="9" stroke="currentColor" stroke-width="1.5"/>
          <polyline points="6,10 9,13 14,7" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <span>Sociale feed om foto's te delen</span>
      </div>
      <div class="solution-item">
        <svg class="solution-icon" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
          <circle cx="10" cy="10" r="9" stroke="currentColor" stroke-width="1.5"/>
          <polyline points="6,10 9,13 14,7" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <span>Reviews te valideren</span>
      </div>
      <div class="solution-item">
        <svg class="solution-icon" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
          <circle cx="10" cy="10" r="9" stroke="currentColor" stroke-width="1.5"/>
          <polyline points="6,10 9,13 14,7" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <span>Professionele content te tonen</span>
      </div>
      <div class="solution-item">
        <svg class="solution-icon" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
          <circle cx="10" cy="10" r="9" stroke="currentColor" stroke-width="1.5"/>
          <polyline points="6,10 9,13 14,7" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <span>Restaurants vinden o.b.v. locatie</span>
      </div>
    </div>
  </div>
</div>

<style>
  .stats-bar {
    border-top: 1px solid rgba(136, 101, 69, 0.06);
    border-bottom: 1px solid rgba(136, 101, 69, 0.12);
    padding: 4.5rem 3rem;
    background: var(--white);
  }

  .stats-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    gap: 3rem;
  }

  .stats-intro {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.75rem;
    flex-shrink: 0;
    width: 260px;
    padding-right: 3rem;
    border-right: 1px solid rgba(136, 101, 69, 0.15);
  }

  .stats-intro-text {
    font-family: var(--serif);
    font-size: 1.15rem;
    font-style: italic;
    color: var(--brown);
    white-space: nowrap;
  }

  .stats-intro-arrow {
    width: 80px;
    height: 20px;
    color: var(--orange);
    flex-shrink: 0;
    opacity: 0.75;
  }

  .stats-inner {
    flex: 1;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    text-align: center;
  }

  .stat {
    opacity: 0;
    animation: fadeUp 0.8s ease forwards;
  }
  .stat:nth-child(1) {
    animation-delay: 0.1s;
  }
  .stat:nth-child(2) {
    animation-delay: 0.2s;
  }
  .stat:nth-child(3) {
    animation-delay: 0.3s;
  }
  .stat:nth-child(4) {
    animation-delay: 0.4s;
  }
  .stat-number {
    font-family: var(--serif);
    font-size: 2.8rem;
    color: var(--orange);
  }

  .stat-label {
    font-size: 1rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--brown);
    margin-top: 0.3rem;
  }

  .solution-bar {
    border-bottom: 1px solid rgba(136, 101, 69, 0.06);
    padding: 4.5rem 3rem;
    background: var(--white);
  }

  .solution-inner {
    align-items: center;
  }

  .solution-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    justify-content: center;
    text-align: left;
    font-size: 1rem;
    font-weight: 600;
    color: var(--text);
    font-family: var(--sans);
  }

  .solution-icon {
    width: 24px;
    height: 24px;
    color: var(--orange);
    flex-shrink: 0;
  }

  @media (max-width: 1024px) {
    .stats-bar,
    .solution-bar {
      padding: 2.5rem 1.5rem;
    }

    .stats-wrapper {
      flex-direction: column;
      align-items: flex-start;
      gap: 1.5rem;
    }

    .stats-intro {
      flex-direction: row;
      align-items: center;
      padding-right: 0;
      padding-bottom: 1.5rem;
      border-right: none;
      border-bottom: 1px solid rgba(136, 101, 69, 0.15);
      width: 100%;
      gap: 0.5rem;
    }

    .stats-intro-arrow {
      display: none;
    }

    .stats-intro-text::after {
      content: ' →';
      font-style: normal;
      color: var(--orange);
    }

    .stats-inner {
      width: 100%;
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }

    .solution-inner {
      grid-template-columns: repeat(2, 1fr);
    }

    .solution-item {
      justify-content: flex-start;
    }
  }

  @media (max-width: 640px) {
    .stats-bar,
    .solution-bar {
      padding: 2rem 1.25rem;
    }

    .stats-intro-text::after {
      content: ' ↓';
    }

    .stats-inner {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .stat {
      display: flex;
      flex-direction: row;
      align-items: center;
      gap: 1rem;
      text-align: left;
    }

    .stat-number {
      font-size: 2rem;
      flex-shrink: 0;
    }

    .stat-label {
      font-size: 0.9rem;
      letter-spacing: 0.06em;
      margin-top: 0;
    }

    .solution-inner {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .solution-item {
      font-size: 0.95rem;
    }
  }
</style>
