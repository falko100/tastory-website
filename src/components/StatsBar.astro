---
interface Props {
  stats: { number: string; label: string }[];
}

const { stats } = Astro.props;
---

<div class="stats-bar">
  <div class="stats-intro">
    <span class="stats-intro-text">Wist je dat</span>
    <svg class="stats-intro-arrow" viewBox="0 0 80 20" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
      <line x1="0" y1="10" x2="68" y2="10" stroke="currentColor" stroke-width="1.5"/>
      <polyline points="58,2 70,10 58,18" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linejoin="round" stroke-linecap="round"/>
    </svg>
  </div>
  <div class="stats-inner">
    {
      stats.map((stat) => (
        <div class="stat">
          <div class="stat-number">{stat.number}</div>
          <div class="stat-label">{stat.label}</div>
        </div>
      ))
    }
  </div>
</div>

<style>
  .stats-bar {
    border-top: 1px solid rgba(136, 101, 69, 0.06);
    border-bottom: 1px solid rgba(136, 101, 69, 0.06);
    padding: 4.5rem 3rem;
    background: var(--white);
  }

  .stats-intro {
    max-width: 1200px;
    margin: 0 auto 2.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    color: var(--orange);
  }

  .stats-intro-text {
    font-family: var(--serif);
    font-size: 1.15rem;
    font-style: italic;
    color: var(--brown);
    white-space: nowrap;
  }

  .stats-intro-arrow {
    width: 80px;
    height: 20px;
    color: var(--orange);
    flex-shrink: 0;
    opacity: 0.75;
  }

  .stats-inner {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    text-align: center;
  }

  .stat {
    opacity: 0;
    animation: fadeUp 0.8s ease forwards;
  }
  .stat:nth-child(1) {
    animation-delay: 0.1s;
  }
  .stat:nth-child(2) {
    animation-delay: 0.2s;
  }
  .stat:nth-child(3) {
    animation-delay: 0.3s;
  }
  .stat:nth-child(4) {
    animation-delay: 0.4s;
  }
  .stat-number {
    font-family: var(--serif);
    font-size: 2.8rem;
    color: var(--orange);
  }

  .stat-label {
    font-size: 1rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--brown);
    margin-top: 0.3rem;
  }

  @media (max-width: 1024px) {
    .stats-inner {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .stats-inner {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>
