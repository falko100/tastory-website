<style is:global>
  nav#navbar {
    position: fixed;
    top: 0; left: 0; right: 0;
    z-index: 100;
    padding: 1.1rem 3rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    backdrop-filter: blur(24px);
    background: rgba(245, 235, 221, 0.8);
    border-bottom: 1px solid rgba(136, 101, 69, 0.08);
    animation: fadeDown 0.8s ease both;
    transition: background 0.4s, box-shadow 0.4s;
  }

  nav#navbar.scrolled {
    background: rgba(245, 235, 221, 0.95);
    box-shadow: 0 4px 30px rgba(136, 101, 69, 0.06);
  }

  nav#navbar .logo {
    font-family: var(--serif);
    font-size: 1.7rem;
    color: var(--brown);
    letter-spacing: 0.01em;
    text-decoration: none;
  }

  nav#navbar .nav-links {
    display: flex;
    gap: 2.2rem;
    list-style: none;
    align-items: center;
  }

  nav#navbar .nav-links a {
    color: var(--brown);
    text-decoration: none;
    font-size: 1rem;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    transition: color 0.3s;
    font-weight: 400;
  }

  nav#navbar .nav-links a:hover { color: var(--orange); }

  nav#navbar .nav-links a {
    position: relative;
  }

  nav#navbar .nav-links a:not(.nav-cta)::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--orange);
    transition: width 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  nav#navbar .nav-links a:not(.nav-cta):hover::after {
    width: 100%;
  }

  nav#navbar .nav-cta {
    background: var(--orange);
    color: var(--white) !important;
    padding: 0.65rem 1.6rem;
    border-radius: 100px;
    font-weight: 600;
    transition: all 0.35s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  nav#navbar .nav-cta:hover {
    background: var(--orange-dark);
    transform: translateY(-1px);
    box-shadow: 0 8px 28px rgba(255, 142, 62, 0.3);
  }

  @media (max-width: 640px) {
    nav#navbar { padding: 1rem 1.5rem; }
    nav#navbar .hide-mobile { display: none; }
  }
</style>
