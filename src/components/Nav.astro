---
const base = import.meta.env.BASE_URL;
---

<nav id="navbar" aria-label="Hoofdnavigatie">
  <a href={`${base}/`} class="logo">
    <img src={`${base}/tastory-logo-header.png`} alt="Tastory" class="logo-img" />
  </a>
  <ul class="nav-links">
    <li><a href={`${base}/oplossingen`}>Oplossingen</a></li>
    <li><a href={`${base}/over-ons`}>Over ons</a></li>
    <li><a href={`${base}/portfolio`}>Portfolio</a></li>
    <li><a href={`${base}/blog`}>Blog</a></li>
    <li><a href={`${base}/contact`}>Contact</a></li>
    <li><a href={`${base}/#download`} class="nav-cta">Download de App</a></li>
  </ul>
  <button
    id="menu-toggle"
    class="menu-toggle"
    aria-expanded="false"
    aria-controls="mobile-menu"
    aria-label="Menu openen"
  >
    <span class="menu-toggle-bar"></span>
    <span class="menu-toggle-bar"></span>
    <span class="menu-toggle-bar"></span>
  </button>
</nav>

<!-- Mobile slide-out panel (outside nav for proper positioning) -->
<div id="mobile-backdrop" class="mobile-backdrop"></div>
<aside id="mobile-menu" class="mobile-menu" aria-label="Mobiel menu">
  <div class="mobile-menu-inner">
    <span class="mobile-menu-label">Menu</span>
    <a href={`${base}/oplossingen`}>Oplossingen</a>
    <a href={`${base}/over-ons`}>Over ons</a>
    <a href={`${base}/portfolio`}>Portfolio</a>
    <a href={`${base}/blog`}>Blog</a>
    <a href={`${base}/contact`}>Contact</a>
    <div class="mobile-menu-divider"></div>
    <a href={`${base}/#download`} class="nav-cta">Download de App</a>
  </div>
</aside>

<style>
  nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: 1.1rem 3rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    backdrop-filter: blur(24px);
    background: rgba(245, 235, 221, 0.8);
    border-bottom: 1px solid rgba(136, 101, 69, 0.08);
    animation: fadeDown 0.8s ease both;
    transition:
      background 0.4s,
      box-shadow 0.4s;
  }

  nav:global(.scrolled) {
    background: rgba(245, 235, 221, 0.95);
    box-shadow: 0 4px 30px rgba(136, 101, 69, 0.06);
  }

  .logo {
    text-decoration: none;
    z-index: 102;
    display: flex;
    align-items: center;
  }

  .logo-img {
    height: 52px;
    width: auto;
  }

  .nav-links {
    display: flex;
    gap: 2.2rem;
    list-style: none;
    align-items: center;
  }

  .nav-links a {
    color: var(--brown);
    text-decoration: none;
    font-size: var(--text-base);
    letter-spacing: 0.06em;
    text-transform: uppercase;
    transition: color 0.3s;
    font-weight: 400;
    position: relative;
  }

  .nav-links a:hover {
    color: var(--orange);
  }

  .nav-links a:not(.nav-cta)::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--orange);
    transition: width 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .nav-links a:not(.nav-cta):hover::after {
    width: 100%;
  }

  .nav-cta {
    background: var(--orange);
    color: var(--white) !important;
    padding: 0.65rem 1.6rem;
    border-radius: 100px;
    font-weight: 600;
    transition: all 0.35s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    text-decoration: none;
    display: inline-block;
  }

  .nav-cta:hover {
    background: var(--orange-dark);
    transform: translateY(-1px);
    box-shadow: 0 8px 28px rgba(255, 142, 62, 0.3);
  }

  /* Hamburger button */
  .menu-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 4px;
    z-index: 102;
    width: 28px;
    height: 24px;
    position: relative;
  }

  .menu-toggle-bar {
    display: block;
    width: 24px;
    height: 2px;
    background: var(--brown);
    border-radius: 2px;
    transition: all 0.35s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    position: absolute;
    left: 2px;
  }

  .menu-toggle-bar:nth-child(1) {
    top: 3px;
  }
  .menu-toggle-bar:nth-child(2) {
    top: 11px;
  }
  .menu-toggle-bar:nth-child(3) {
    top: 19px;
  }

  /* Animated X state */
  :global(.menu-open) .menu-toggle-bar:nth-child(1) {
    top: 11px;
    transform: rotate(45deg);
  }
  :global(.menu-open) .menu-toggle-bar:nth-child(2) {
    opacity: 0;
    transform: translateX(10px);
  }
  :global(.menu-open) .menu-toggle-bar:nth-child(3) {
    top: 11px;
    transform: rotate(-45deg);
  }

  /* Backdrop */
  .mobile-backdrop {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(58, 46, 34, 0.4);
    backdrop-filter: blur(4px);
    z-index: 98;
    opacity: 0;
    transition: opacity 0.35s ease;
    pointer-events: none;
  }

  :global(.menu-open) .mobile-backdrop {
    opacity: 1;
    pointer-events: auto;
  }

  /* Slide-out panel */
  .mobile-menu {
    display: none;
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    width: 300px;
    max-width: 85vw;
    background: var(--beige);
    z-index: 101;
    transform: translateX(100%);
    transition: transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    box-shadow: -10px 0 40px rgba(58, 46, 34, 0.15);
  }

  :global(.menu-open) .mobile-menu {
    transform: translateX(0);
  }

  .mobile-menu-inner {
    display: flex;
    flex-direction: column;
    padding: 6rem 2.5rem 3rem;
    gap: 0.3rem;
  }

  .mobile-menu-label {
    font-size: var(--text-xs);
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--text-muted);
    margin-bottom: 1rem;
  }

  .mobile-menu a:not(.nav-cta) {
    color: var(--text);
    text-decoration: none;
    font-family: var(--serif);
    font-size: 1.5rem;
    padding: 0.7rem 0;
    transition: color 0.3s;
    display: block;
  }

  .mobile-menu a:not(.nav-cta):hover {
    color: var(--orange);
  }

  .mobile-menu-divider {
    height: 1px;
    background: rgba(136, 101, 69, 0.1);
    margin: 1rem 0;
  }

  .mobile-menu .nav-cta {
    text-align: center;
    font-size: var(--text-base);
    letter-spacing: 0.04em;
  }

  @media (max-width: 768px) {
    nav {
      padding: 1rem 1.5rem;
    }

    .logo-img {
      height: 44px;
    }

    .nav-links {
      display: none;
    }

    .menu-toggle {
      display: flex;
    }

    .mobile-backdrop {
      display: block;
    }

    .mobile-menu {
      display: block;
    }
  }
</style>
